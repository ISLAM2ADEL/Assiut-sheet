#include<iostream>
#include<algorithm>
#include<string.h>
#include <cmath>
#define ll long long
using namespace std;

int main()
{
    ll x;
    cin>>x;
   for(int i=0;i<x;i++){
        for(int j=0;j<x;j++){
            if(j==i){
                if(i==x/2)
                    cout<<'X';
                else
                    cout<<'\\';
            }
            else if(j==x-1-i)
                cout<<'/';
            else
                cout<<'*';
        }
        cout<<endl;
   }
    return 0;
}
