#include<iostream>
#include<bits/stdc++.h>
#include<cmath>
#define ll long long
using namespace std ;

int main() {
    ll x;
    cin>>x;
    for(int i=0;i<x;i++){
        for(int k=i;k<x-1;k++){
            cout<<" ";
        }
        for(int j=2*i+1;j>0;j--)
            cout<<'*';
        cout<<endl;
    }
    return 0;
}
