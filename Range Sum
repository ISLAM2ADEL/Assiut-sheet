#include<iostream>
#include<algorithm>
#include<string.h>
#include <cmath>
#define ll long long
using namespace std;

int main()
{
    ll x,y,z;
    cin>>x;
    for(int i=0;i<x;i++){
        ll sum=0;
        cin>>y>>z;
        ll m = min(y,z);
        ll n = max(y,z);
        m--;
        ll res1=(m*(m+1))/2;
        ll res2=(n*(n+1))/2;
        cout<<res2-res1<<endl;
    }
    return 0;
}
