#include<iostream>
#include<bits/stdc++.h>
#include<cmath>
#define ll long long
using namespace std ;

int main() {
    ll x;
    cin>>x;
    for(int i=0;i<x;i++){
        for(int k=i+1;k<x;k++)
            cout<<" ";
        for(int j=0;j<i*2+1;j++)
            cout<<'*';
        cout<<endl;
    }
    for(int i=x-1;i>=0;i--){
        for(int k=1;k<x-i;k++)
            cout<<" ";
        for(int j=0;j<i*2+1;j++)
            cout<<'*';
        cout<<endl;
    }
    return 0;
}
