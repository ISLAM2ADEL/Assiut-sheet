#include<iostream>
#include<algorithm>
#include<string.h>
#include <cmath>
#define ll long long
using namespace std;

int main()
{
    ll x,y,count=0;
    cin>>x;
    for(int i=0;i<x;i++){
        ll check =0;
        cin>>y;
        while(y%2==0){
            y/=2;
            check++;
        }
        if(check>count)
            count=check;
    }
    cout<<count<<endl;
    return 0;
}
