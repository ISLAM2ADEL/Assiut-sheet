#include<iostream>
#include<algorithm>
#include<string.h>
#include <cmath>
#define ll long long
using namespace std;

int main()
{
    ll x,min=9999999999999,z;
    cin>>x;
    ll y[x];
    for(int i=0;i<x;i++){
        cin>>y[i];
        if(y[i]<min){
            min=y[i];
            z=i+1;
        }
    }
    cout<<min<<" "<<z<<endl;
    return 0;
}
