#include<iostream>
#include<algorithm>
#include<string.h>
#include <cmath>
#define ll long long
using namespace std;
 
int main()
{
    int k,s,sum=0;
    cin>>k>>s;
    for(int i=0;i<=k;i++)
        for(int j=0;j<=k;j++)
            if(s-i-j>=0&&s-i-j<=k)
                sum++;
    cout<<sum;
    return 0;
}
